{
  "name": "react_app",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "concurrently": "^7.3.0",
    "electron": "^20.1.0",
    "electron-builder": "^23.3.3",
    "wait-on": "^6.0.1"
  },
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/react": "^18.0.14",
    "axios": "^0.27.2",
    "bootstrap": "^5.1.0",
    "chart.js": "^3.9.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.18.1",
    "mongoose": "^6.5.1",
    "nodemon": "^2.0.19",
    "react": "^18.2.0",
    "react-bootstrap": "^2.5.0-beta.0",
    "react-calendar": "^3.7.0",
    "react-chartjs-2": "^4.3.1",
    "react-color": "^2.19.3",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "main": "build/electron.js",
  "scripts": {
    "start": "react-scripts start | nodemon server/server.js",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "wait-on http://localhost:3000 http://localhost:3001 && electron .",
    "dev-start": "concurrently \"cross-env BROWSER=none npm start\" \"npm:electron",
    "builder": "electron-builder"
  },
  "build": {
    "appId": "react_app",
    "productName": "Task-Management",
    "win": {
      "target": [
        "nsis"
      ],
    "icon": "build/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "uninstallDisplayName": "Task-Management-uninstaller",
      "allowToChangeInstallationDirectory": true
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
